<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquincollege.wils0751.hsccolorpicker.MainActivity">


    <TextView
        android:id="@+id/colorSwatch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:height="200dp"
        android:background="#000"
        android:onClick="onClick"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/Hue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/colorSwatch"
        android:layout_marginTop="17dp"
        android:text="@string/Hue"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/hueSb"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Hue"
        android:layout_marginTop="12dp"
        android:background="@drawable/gradient"
        android:max="359" />

    <TextView
        android:id="@+id/Sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hueSb"
        android:layout_marginTop="16dp"
        android:text="@string/Saturation"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/Satsb"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Sat"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient1"
        android:max="100" />

    <SeekBar
        android:id="@+id/Valsb"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Val"
        android:background="@drawable/gradient2"
        android:max="100" />

    <TextView
        android:id="@+id/Val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Satsb"
        android:layout_marginTop="24dp"
        android:text="@string/Value"
        android:textSize="18sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button

                android:id="@+id/blackButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/Black"
                android:onClick="onClick" />

            <Button

                android:id="@+id/redButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/Red"
                android:onClick="onClick" />

            <Button

                android:id="@+id/limeButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/Lime"
                android:onClick="onClick" />

            <Button

                android:id="@+id/blueButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:background="@color/Blue"
                android:onClick="onClick" />

            <Button

                android:id="@+id/yellowButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Yellow"
                android:onClick="onClick" />

            <Button

                android:id="@+id/cyanButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Cyan"
                android:onClick="onClick" />


            <Button

                android:id="@+id/magentaButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Magenta"
                android:onClick="onClick" />

            <Button

                android:id="@+id/silverButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Silver"
                android:onClick="onClick" />

            <Button

                android:id="@+id/grayButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Gray"
                android:onClick="onClick" />

            <Button

                android:id="@+id/maroonButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Maroon"
                android:onClick="onClick" />

            <Button

                android:id="@+id/oliveButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Olive"
                android:onClick="onClick" />

            <Button

                android:id="@+id/greenButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Green"
                android:onClick="onClick" />

            <Button

                android:id="@+id/purpleButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Purple"
                android:onClick="onClick" />

            <Button

                android:id="@+id/tealButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Teal"
                android:onClick="onClick" />

            <Button
                android:id="@+id/navyButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Navy"
                android:onClick="onClick" />
        </LinearLayout>


    </HorizontalScrollView>


</RelativeLayout>
